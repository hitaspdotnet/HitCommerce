@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Hitasp.HitCommerce.Core.Permissions
@using Hitasp.HitCommerce.Core.Web.Pages.Core.StateOrProvinces
@using Hitasp.HitCommerce.Core.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using Hitasp.HitCommerce.Core.Localization
@inject IHtmlLocalizer<CoreResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["StateOrProvinces"].Value;
    PageLayout.Content.MenuItemName = CoreMenus.StateOrProvinces;
}

@section scripts
{
    <abp-script src="/Pages/Core/StateOrProvinces/index.js" />
}

@section content_toolbar {
    @if (await Authorization.IsGrantedAsync(CorePermissions.StateOrProvinces.Create))
    {
        <abp-button id="NewStateOrProvinceButton" text="@L["NewStateOrProvince"].Value" icon="plus" button-type="Primary" />
    }
}

<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control" id="FilterText" placeholder="@L["Search"]"/>
                        <div class="input-group-append">
                            <abp-button button-type="Primary" type="submit" icon="search"/>
                        </div>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-input asp-for="NameFilter" label="@L["Name"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="Code3Filter" label="@L["Code3"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="TypeFilter" label="@L["Type"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="CountryIdFilter" label="@L["Country"].Value" />
            </abp-column>
        </abp-row>

        <abp-table striped-rows="true" id="StateOrProvincesTable">
            <thead>
				<tr>
					<th>@L["Actions"]</th>
					<th>@L["Name"]</th>
					<th>@L["Code3"]</th>
					<th>@L["Type"]</th>
					<th>@L["Country"]</th>
				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>