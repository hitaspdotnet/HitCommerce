@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Hitasp.HitCommerce.Core.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Hitasp.HitCommerce.Core.Web.Pages.Core.Districts
@using Hitasp.HitCommerce.Core.Districts;
@using System.Globalization
@inject IHtmlLocalizer<CoreResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Core/Districts/CreateModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["NewDistrict"].Value"></abp-modal-header>

        <abp-modal-body>
            
            <abp-input asp-for="District.Name"/>

            <abp-input asp-for="District.Type"/>

            <div class="form-group">
                <label for="District_CityId">@L["City"]</label>
                <select id="District_CityId"
                        class="custom-select form-control"
                        name="District.CityId"
                        data-value="@Model.District.CityId" required>
                </select>
            </div>

        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>