@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Hitasp.HitCommerce.Core.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Hitasp.HitCommerce.Core.Web.Pages.Core.Cities
@using Hitasp.HitCommerce.Core.Cities;
@using System.Globalization
@inject IHtmlLocalizer<CoreResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Core/Cities/CreateModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["NewCity"].Value"></abp-modal-header>

        <abp-modal-body>
            
            <abp-input asp-for="City.Name"/>

            <abp-input asp-for="City.Type"/>

            <div class="form-group">
                <label for="City_StateOrProvinceId">@L["StateOrProvince"]</label>
                <select id="City_StateOrProvinceId"
                        class="custom-select form-control"
                        name="City.StateOrProvinceId"
                        data-value="@Model.City.StateOrProvinceId" required>
                </select>
            </div>

        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>